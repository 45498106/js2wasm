{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "typeRoots": ["./node_modules/@types"],
    "target": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
